@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TurboAz.ViewModels.CarViewModel

<!DOCTYPE html>
<html>
<head>

    <link href="~/lib/bootstrap/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/twitter-bootstrap/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/twitter-bootstrap/css/bootstrap-reboot.css" rel="stylesheet" />
</head>

<body class="w-75; mx-auto; mb-4 " style="border-color: transparent">

    @*<script src="~/lib/jquery/jquery.min.js"></script>
    <script type="text/javascript">
        $("body").on("change", "#marka", function () {
            var selectBrandID = $(this).val();
            $.getJSON("Home/GetMarkaForBrandID?id=" + selectBrandID, function (data) {
